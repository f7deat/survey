@model Survey.Models.Vote
@using Survey.Enums;

@{
    ViewData["Title"] = "Khảo sát";
    var j = 0;
}
<link rel="stylesheet" href="/lib/icheck/skins/flat/red.css">

@if(Model == null) {
    <div class="alert alert-info font-weight-bold">
        <i class="fas fa-exclaiming"></i> Hiện tại chưa có khảo sát nào!
    </div>
}
else 
{
    <h3 class="font-weight-bold text-uppercase text-center mb-4">phiếu lấy ý kiến phản hồi người học</h3>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td class="text-center">(1) Không đồng ý</td>
                <td class="text-center">(2) Không có ý kiến gì</td>
                <td class="text-center">(3) Đồng ý một phần</td>
                <td class="text-center">(4) Hoàn toàn đồng ý</td>
            </tr>
        </tbody>
    </table>
<form action="/vote/create" method="POST">
<input type="hidden" name="TicketId" value="@Model.TicketId" />
<input type="hidden" name="UserId" value="@Model.UserId" />
                <table class="table table-bordered mt-4 mb-0">
            <thead class="thead-light">
                <tr>
                    <th colspan="2" rowspan="2">Nội dung</th>
                    <th colspan="4" rowspan="1">Mức độ</th>
                </tr>
                <tr>
                    <th class="text-center">
                        (1)
                    </th>
                    <th class="text-center">
                        (2)
                    </th>
                    <th class="text-center">
                        (3)
                    </th>
                    <th class="text-center">
                        (4)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center font-weight-bold" rowspan="100" style="width: 8%">Công tác chuẩn bị giảng dạy, huấn luyện</td>
                </tr>
            @for (int i = 0; i < Model.Quizzes1.Count(); i++)
            {
                j++;
                <tr>
                    <td class="font-weight-bold mb-2" style="width: 840px">@j. @(Model.Quizzes1[i].Title)</td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelA[@(i)]" value="0" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelA[@(i)]" value="1" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelA[@(i)]" value="2" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelA[@(i)]" value="3" required/>
                    </td>
                </tr>
            }
            </tbody>
        </table>
                <table class="table table-bordered mb-0">
            <tbody>
                <tr>
                    <td class="text-center font-weight-bold" rowspan="100" style="width: 8%">Nội dung giảng dạy, huấn luyện.</td>
                </tr>
            @for (int i = 0; i < Model.Quizzes2.Count(); i++)
            {
                j++;
                <tr>
                    <td class="font-weight-bold mb-2" style="width: 840px">@j. @(Model.Quizzes2[i].Title)</td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelB[@(i)]" value="0" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelB[@(i)]" value="1" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelB[@(i)]" value="2" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelB[@(i)]" value="3" required/>
                    </td>
                </tr>
            }
            </tbody>
        </table>
                <table class="table table-bordered mb-0">
            <tbody>
                <tr>
                    <td class="text-center font-weight-bold" rowspan="100" style="width: 8%">Phương pháp giảng dạy, huấn luyện</td>
                </tr>
            @for (int i = 0; i < Model.Quizzes3.Count(); i++)
            {
                j++;
                <tr>
                    <td class="font-weight-bold mb-2" style="width: 840px">@j. @(Model.Quizzes3[i].Title)</td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelC[@(i)]" value="0" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelC[@(i)]" value="1" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelC[@(i)]" value="2" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelC[@(i)]" value="3" required/>
                    </td>
                </tr>
            }
            </tbody>
        </table>
                <table class="table table-bordered mb-0">
            <tbody>
                <tr>
                    <td class="text-center font-weight-bold" rowspan="100" style="width: 8%">Tổ chức giảng dạy, huấn luyện.</td>
                </tr>
            @for (int i = 0; i < Model.Quizzes4.Count(); i++)
            {
                j++;
                <tr>
                    <td class="font-weight-bold mb-2" style="width: 840px">@j. @(Model.Quizzes4[i].Title)</td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelD[@(i)]" value="0" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelD[@(i)]" value="1" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelD[@(i)]" value="2" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelD[@(i)]" value="3" required/>
                    </td>
                </tr>
            }
            </tbody>
        </table>
                <table class="table table-bordered mb-0">
            <tbody>
                <tr>
                    <td class="text-center font-weight-bold" rowspan="100" style="width: 8%">Thái độ, trách nhiệm của giảng viên.</td>
                </tr>
            @for (int i = 0; i < Model.Quizzes5.Count(); i++)
            {
                j++;
                <tr>
                    <td class="font-weight-bold mb-2" style="width: 840px">@j. @(Model.Quizzes5[i].Title)</td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelE[@(i)]" value="0" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelE[@(i)]" value="1" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelE[@(i)]" value="2" required/>
                    </td>
                    <td class="mb-2 text-center">
                            <input type="radio" name="LevelE[@(i)]" value="3" required/>
                    </td>
                </tr>
            }
            </tbody>
        </table>

<div class="mt-3 text-center">
    <button class="btn btn-primary px-4" type="submit">Gửi</button>
</div>
</form>
}

@section scripts {
    <script src="/lib/icheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
          $('input').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
          });
        });
    </script>
}