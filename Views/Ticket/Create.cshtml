@model Survey.Entities.Ticket
@using Survey.Enums

@{
    ViewData["Title"] = "Tạo khảo sát";
}

<form asp-action="create" method="POST">
    <label>Tên</label>
    <input type="text" class="form-control mb-3" asp-for="Name" required/>
    <label>Loại học phần</label>
    <select class="form-control mb-3" asp-for="DeparmentId" required>
        
        @foreach (var item in ViewBag.Department)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <button class="btn btn-primary" type="submit">Tạo khảo sát</button>
    <a href="/" class="btn btn-secondary">Hủy bỏ</a>
</form>
