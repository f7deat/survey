@model List<Survey.Entities.Quiz>

<a href="/quiz/create/@ViewBag.Id" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm câu hỏi</a>
<div class="mt-4">
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Nội dung</th>
                <th>Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="/quiz/edit/@item.Id"><i class="fas fa-pen"></i></a>
                        <a class="btn btn-danger btn-sm" href="/quiz/delete/@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>