@model Survey.Entities.User
@{
    ViewData["Title"] = "Người dùng";
}

<form action="/user/edit" method="POST">
    <input type="hidden" class="form-control mb-3" asp-for="Id"/>
    <input type="hidden" class="form-control mb-3" asp-for="UserType"/>
    <label>Họ và tên</label>
    <input type="text" class="form-control mb-3" asp-for="Name" required/>
    <label>Đơn vị</label>
    <input type="text" class="form-control mb-3" asp-for="Department" required/>
    <button class="btn btn-primary" type="submit">Lưu</button>
</form>