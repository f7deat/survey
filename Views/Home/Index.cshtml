@model IEnumerable<Survey.Entities.Quiz>
@{
    ViewData["Title"] = "Khảo sát";
}
<link rel="stylesheet" href="/lib/icheck/skins/flat/red.css">

<div class="mb-3 text-right">
    Xin chào, <b>@ViewBag.User</b>
</div>

<h3 class="h4 mb-3">Gửi phản hồi của bạn</h3>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Câu hỏi</th>
            <th colspan="4">Mức độ</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td class="font-weight-bold mb-2">@item.Title</td>
        <td class="mb-2">
            <label>
                <input type="radio" name="choice-@item.Id"/> @item.ChoiceA
            </label>
        </td>
        <td class="mb-2">
            <label>
                <input type="radio" name="choice-@item.Id"/> @item.ChoiceB
            </label>
        </td>
        <td class="mb-2">
            <label>
                <input type="radio" name="choice-@item.Id"/> @item.ChoiceC
            </label>
        </td>
        <td class="mb-2">
            <label>
                <input type="radio" name="choice-@item.Id"/> @item.ChoiceD
            </label>
        </td>
    </tr>
}
    </tbody>
</table>

<div class="mt-3 text-center">
    <button class="btn btn-primary px-4" type="button">Gửi</button>
    <button class="btn btn-secondary px-4" type="reset">Hủy</button>
</div>

@section scripts {
    <script src="/lib/icheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
          $('input').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
          });
        });
    </script>
}