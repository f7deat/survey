@model Survey.Models.Vote
@{
    ViewData["Title"] = "Khảo sát";
}
<link rel="stylesheet" href="/lib/icheck/skins/flat/red.css">

<div class="mb-3 text-right">
    Xin chào, <b>@ViewBag.User</b>
</div>

<h3 class="h4 mb-3">Gửi phản hồi của bạn</h3>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>TT</th>
            <th>Nội dung</th>
            <th colspan="4">Mức độ</th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i < Model.Quizzes.Count(); i++)
{
    <tr>
        <td></td>
        <td class="font-weight-bold mb-2">@(Model.Quizzes[i].Title)</td>
        <td class="mb-2">
            <label>
                <input type="radio" name="Vote[@i]" value="0"/>
            </label>
        </td>
        <td class="mb-2">
            <label>
                <input type="radio" name="Vote[@i]" value="1"/>
            </label>
        </td>
        <td class="mb-2">
            <label>
                <input type="radio" name="Vote[@i]" value="2"/>
            </label>
        </td>
        <td class="mb-2">
            <label>
                <input type="radio" name="Vote[@i]" value="3"/>
            </label>
        </td>
    </tr>
}
    </tbody>
</table>

<div class="mt-3 text-center">
    <button class="btn btn-primary px-4" type="button">Gửi</button>
    <button class="btn btn-secondary px-4" type="reset">Hủy</button>
</div>

@section scripts {
    <script src="/lib/icheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
          $('input').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
          });
        });
    </script>
}